{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"strict": true,
		"target": "ES6",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"skipLibCheck": true,
		"types": ["node", "vitest/globals"],
		"baseUrl": "src"
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts"]
}
